<!-- Loop over each object in the projects array -->
{{#each post as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <div class="col-md-7">
      <p>
        {{post.contents}}
      </p>
    </div>
    <p>Created by {{post.user_name}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}